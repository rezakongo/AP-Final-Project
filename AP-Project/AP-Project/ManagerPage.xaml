<Window x:Class="AP_Project.ManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP_Project"
        mc:Ignorable="d"
        Title="ManagerPage" Height="680" Width="1000" Background="Black">
    <Grid>
        <StackPanel>
            <TabControl>
                <TabItem Header="Food" Background="DarkGray">
                    <StackPanel Background="Gray">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition  Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <DataGrid ScrollBar.Scroll="foodtable_Scroll" x:Name="foodtable" ItemsSource="{Binding}"  AutoGenerateColumns="True" Margin="5,5,5,5" Grid.Column="0" SelectionChanged="foodtable_SelectionChanged"></DataGrid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button x:Name="Changes" Content="Save Changes!" Background="DarkGray" FontSize="20" FontWeight="DemiBold" Margin="5,5,5,5" BorderBrush="Black" Click="Changes_Click"/>
                                <Calendar  x:Name="cal" Grid.Row="1" Background="DarkGray"  Margin="5,5,5,5"/>
                                <ComboBox Name="t" Margin="5,5,5,5" Grid.Row="2">
                                    <ComboBoxItem Content="Fast Food" IsSelected="True" x:Name="fastfood" Tag="fastfood"/>
                                    <ComboBoxItem Content="Ancient" Name="ancient" Tag="ancient"/>
                                    <ComboBoxItem Content="Arabic" Name="arabic" Tag="arabic"/>
                                    <ComboBoxItem Content="Sea Food" x:Name="seafood" Tag="seafood"/>
                                    <ComboBoxItem Content="Italian Food"  Name="italian" Tag="Italian"/>

                                </ComboBox>
                                <TextBlock Text="Image" Margin="5,5,5,5" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3"/>

                                <Image x:Name="fi" Margin="5,5,5,5" Width="100" Grid.Row="4" Height="100"/>
                                <Grid Grid.Row="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="it" Grid.Column="0" Margin="5,5,5,5" Background="DarkGray" BorderBrush="Black"/>
                                    <Button x:Name="ci" Grid.Column="1" Margin="5,5,5,5" Background="DarkGray" BorderBrush="black" Content="Browse" Click="ci_Click"/>
                                </Grid>

                            </Grid>
                        </Grid>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Orders" Background="DarkGray">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="True" CanUserAddRows="False" x:Name="allorders" Margin="5,5,5,5" Grid.Column="0" SelectionChanged="allorders_SelectionChanged"/>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Costumer :" Margin="5,5,5,5" FontSize="25" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" x:Name="cos"  Margin="5,5,5,5" FontSize="25" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Text="Adress :" Margin="5,5,5,5" FontSize="25" FontWeight="Bold"/>
                            <TextBlock Grid.Row="3" x:Name="adr" Margin="5,5,5,5" FontSize="25" FontWeight="Bold"/>
                            <TextBlock Grid.Row="4" Text="Factor" Margin="5,5,5,5" FontSize="25" FontWeight="Bold"/>
                            <TextBox x:Name="factor" Grid.Row="5" Margin="5,5,5,5" Background="DarkGray" Height="200"/>
                            <TextBlock Grid.Row="6" FontSize="18"  x:Name="pay" Margin="5,5,5,5"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Income" Background="DarkGray">
                    <Grid Margin="5,5,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="62*"/>
                            <ColumnDefinition Width="915*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="OutCome : "  Grid.Row="0" Margin="5,5,5,0" FontSize="30" Background="red" FontWeight="Bold" Grid.ColumnSpan="2"/>
                        <TextBlock  x:Name="outcome" Grid.Row="1" Margin="5,0,5,5" FontSize="30" Background="Red" FontWeight="Bold" Grid.ColumnSpan="2" />
                        <TextBlock Text="OutCome : "  Grid.Row="2" Margin="5,5,5,0" FontSize="30" Background="Green" FontWeight="Bold" Grid.ColumnSpan="2"/>
                        <TextBlock x:Name="income" Grid.Row="3" Margin="5,0,5,5" FontSize="30" Background="Green" FontWeight="Bold" Grid.ColumnSpan="2" />
                        <TextBlock Text="Profit : "  Grid.Row="4" Margin="5,5,5,0" FontSize="30" Background="Yellow" FontWeight="Bold" Grid.ColumnSpan="2"/>
                        <TextBlock x:Name="pro" Grid.Row="5" Margin="5,0,5,4.903" FontSize="30" Background="Yellow" FontWeight="Bold" Grid.ColumnSpan="2" />

                    </Grid>
                </TabItem>
                <TabItem Header="Resturant Info" Background="DarkGray">
                    <StackPanel Background="Gray" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="17*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="363*"/>
                                <ColumnDefinition Width="393*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="FirstName :" FontSize="20" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"/>
                            <TextBox x:Name="firstname" Grid.Row="1" Grid.Column="0" Margin="5,5,5,4.6" FontSize="20" Background="DarkGray" BorderBrush="Black" Grid.ColumnSpan="4"/>
                            <TextBlock Text="LastName :" FontSize="20" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,0.4,0,37.6" Grid.RowSpan="2"/>
                            <TextBox x:Name="lastname" FontSize="20" Grid.Row="3" Grid.Column="0" Margin="5,5.4,5,3.6" Background="DarkGray" BorderBrush="Black" Grid.ColumnSpan="4"/>
                            <TextBlock Text="Type :" FontSize="20" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,0.4,0,15.6"/>
                            <TextBox  Height="30" VerticalAlignment="Top"  Name="type" Margin="5,6.4,5,0" Grid.Column="0" Grid.Row="5" FontSize="20" Background="DarkGray" BorderBrush="Black" Grid.ColumnSpan="4"/>
                            <TextBlock Text="Regeon :" FontSize="20" Grid.Row="0" Grid.Column="4"/>
                            <TextBox x:Name="regeon" FontSize="20" Grid.Column="4" Grid.Row="1" Background="DarkGray" BorderBrush="Black" Margin="5,5,5,4.6"/>
                            <TextBlock Text="Adress :" FontSize="20" Grid.Row="2" Grid.Column="4" Margin="0,0.4,0,37.6" Grid.RowSpan="2"/>
                            <TextBox x:Name="adress" Grid.Row="3" Grid.Column="4" Margin="5,5.4,5,3.6" Background="DarkGray" BorderBrush="Black"/>
                            <TextBlock Text="Menu :" FontSize="20" Grid.Row="4" Grid.Column="4" Margin="0,0.4,0,15.6"/>
                            <Grid Grid.Row="4" Grid.Column="4" Margin="0,26.4,0,-0.4" Grid.RowSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="image" Grid.Column="0" Margin="5,5,5,5" FontSize="20" Background="DarkGray" BorderBrush="Black" Grid.Row="0"/>
                                <Button x:Name="browse" Content="Browse" FontSize="20" FontWeight="DemiBold" Background="DarkGray" BorderBrush="Black" Grid.Row="0" Margin="5,5,5,5" Grid.Column="1" Click="browse_Click"/>
                                <Image x:Name="im" Grid.Row="1" Width="150" Height="150" Margin="5,5,5,5"></Image>
                            </Grid>
                            <Button x:Name="change" Content="Change Info" Margin="9.5,50.4,40,39.6" BorderBrush="Black" BorderThickness="4" FontSize="30" FontWeight="Bold" Grid.Column="3"  Grid.Row="5" Click="change_Click"/>
                        </Grid>
                    </StackPanel>
                </TabItem>
                
            </TabControl>

        </StackPanel>
    </Grid>
</Window>
